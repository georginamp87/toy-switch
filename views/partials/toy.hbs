<a class="toy-link" href='/toypage/{{this._id}}'>
 <div class="col">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">{{this.name}}</h4>
        <img class="toy-image" src="{{this.photos.[0]}}" alt="photo">
        <p class="card-text">{{this.description}}</p> 
        <p class="card-text">{{this.city}}</p> 
      </div>
    </div>
  </div>
</a>