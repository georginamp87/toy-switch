<h1>Edit your Toy</h1>

<form method="POST" action="/edittoy/{{data.toy._id}}">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input  required="true"  value="{{data.toy.name}}" name="name" type="text" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Description</label>
    <input  required="true"   value="{{data.toy.description}}" name="description" type="text" class="form-control">
  </div>
  <div class="mb-3">
    <label>Category</label>
    <select  required="true"  name="category" class="form-select" aria-label="Default select example">
      <option value="{{data.toy.category}}"selected>{{data.toy.category}}</option>
      <option value="Toy">Toy</option>
      <option value="Board Game">Board Game</option>
      <option value="Teddy Bear">Teddy Bear</option>
      <option value="Puzzle">Puzzle</option>
      <option value="Sports">Sports</option>
      <option value="Books">Books</option>
      <option value="Video games">Video games</option>
      <option value="other">Other</option>
    </select>
  </div>
  <div class="mb-3">
    <label>Age Range</label>
    <select  required="true"  name="ageRange" class="form-select" aria-label="Default select example">
      <option value="{{data.toy.ageRange}}"selected>{{data.toy.ageRange}}</option>
      <option value="baby">Baby</option>
      <option value="toddler">Toddler</option>
      <option value="3 to 6 years old">3 to 6 years old</option>
      <option value="7 to 10 years old">7 to 10 years old</option>
      <option value="10 years old +">10 years old +</option>
    </select>
  </div>
<div class="mb-3">
    <label>Switch Mode</label>
    <select  required="true"  name="switchMode" class="form-select" aria-label="Default select example">
      <option value="{{data.toy.switchMode}}" selected>{{data.toy.switchMode}}</option>
      <option value="switch">Switch</option>
      <option value="gift">Gift</option>
      <option value="temporary-switch">Temporary switch</option>
    </select>
  </div>
    <div class="mb-3">
    <label>Toy photos</label>
      <input type="file" name="imageUrl" accept="image/png, image/jpg">
  </div>
  <button type="submit" class="btn btn-primary">Update Toy</button>
</form>

{{#if msg}}
<div class="error">{{msg}}</div>
{{/if}}